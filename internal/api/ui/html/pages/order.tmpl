{{define "title"}}Order #{{.OrderUID}}{{end}}
{{define "main"}}
<div class="container">
    <div class="card">
        <a href="/home" class="back-link">&larr; Back to search</a>
        <h1>Order Details</h1>
        {{if .OrderFound}}
        <h2>UID: {{.OrderUID}}</h2>
        <div class="json-container">
            <pre><code id="json-content"></code></pre>
        </div>
        <script>
            const jsonData = {{.Order}};
            document.getElementById('json-content').innerHTML = syntaxHighlight(JSON.stringify(jsonData, undefined, 2));
        </script>
        {{else}}
        <h2>Order not found</h2>
        <p>The order with UID '{{.OrderUID}}' could not be found.</p>
        {{end}}
    </div>
</div>
{{end}}
